{
  "name": "figmagic",
  "description": "Generate design tokens, export graphics, and extract design token-driven React components from your Figma documents. Inspired by Salesforce Theo.",
  "keywords": [
    "figma",
    "figma api",
    "design tokens",
    "tokens",
    "design system",
    "salesforce theo"
  ],
  "homepage": "https://www.figmagic.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikaelvesavuori/figmagic.git"
  },
  "version": "3.0.0",
  "author": "Mikael Vesavuori",
  "contributors": [
    {
      "name": "Victor",
      "url": "https://github.com/vspedr"
    },
    {
      "name": "Zack Brown",
      "url": "https://github.com/zackbrown"
    }
  ],
  "module": "index.mjs",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.6",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.0",
    "trash": "^6.1.1"
  },
  "bin": {
    "figmagic": "./index.mjs"
  },
  "scripts": {
    "setup": "rm package-lock.json && rm -rf /node_modules && rm -rf /usr/local/lib/node_modules/figmagic && npm install -g",
    "figmagic": "node --experimental-modules index.mjs",
    "test": "jest __tests__ --collectCoverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": "^[A-Z]+-[0-9]+ - .*",
      "subjectPatternErrorMsg": "Subject must be in format 'CMS-123 - Commit message'",
      "helpMessage": ""
    }
  }
}
